<% content_for :page_title do %>
  <%= Spree.t(:bid) %>
<% end %>
<% content_for :page_actions do %>
	<li>
		<%= link_to Spree.t(:back_to_bids_list), spree.admin_bids_path, class: 'button' %>
	</li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @bid } %>

<%= form_for [:admin , @bid], :html => { :multipart => true } do |f| %>
  <fieldset class="no-border-top">
    <%= render 'form', f: f %>
    <div class="form-buttons filter-actions actions" data-hook="buttons">
	  <%= button Spree.t('actions.create') %>
	  <%= link_to Spree.t('actions.cancel'), collection_url, :class => 'button' %>
	</div>
  </fieldset>
<% end %>